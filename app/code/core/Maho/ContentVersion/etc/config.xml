<config>
    <modules>
        <Maho_ContentVersion>
            <version>1.0.0</version>
        </Maho_ContentVersion>
    </modules>
    <global>
        <models>
            <contentversion>
                <class>Maho_ContentVersion_Model</class>
                <resourceModel>contentversion_resource</resourceModel>
            </contentversion>
            <contentversion_resource>
                <class>Maho_ContentVersion_Model_Resource</class>
                <entities>
                    <version>
                        <table>content_version</table>
                    </version>
                </entities>
            </contentversion_resource>
        </models>
        <helpers>
            <contentversion>
                <class>Maho_ContentVersion_Helper</class>
            </contentversion>
        </helpers>
        <resources>
            <contentversion_setup>
                <setup>
                    <module>Maho_ContentVersion</module>
                </setup>
            </contentversion_setup>
        </resources>
    </global>
    <default>
        <general>
            <contentversion>
                <max_versions>3</max_versions>
                <max_age_days>90</max_age_days>
            </contentversion>
        </general>
    </default>
</config>
